{
    "name": "strtob/yii2-widget-toolkit",
    "description": "A toolkit of Yii2 widgets.",
    "type": "library",
    "require": {
        "php": ">=7.4",
        "yiisoft/yii2": "*",
        "bower-asset/jquery": ">=3.5",    // Ensure jQuery is loaded
        "bower-asset/fonticonpicker": ">=3.1"  // Ensure FontIconPicker is loaded
    },
    "autoload": {
        "psr-4": {
            "strtob\\yii2WidgetToolkit\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
